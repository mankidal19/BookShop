<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>CatalogPage</servlet-name>
        <servlet-class>coreservlets.CatalogPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KidsBooksPage</servlet-name>
        <servlet-class>coreservlets.KidsBooksPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderPage</servlet-name>
        <servlet-class>coreservlets.OrderPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewBooks</servlet-name>
        <servlet-class>coreservlets.viewBooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addBook</servlet-name>
        <servlet-class>coreservlets.addBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editBook</servlet-name>
        <servlet-class>coreservlets.editBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteBook</servlet-name>
        <servlet-class>coreservlets.deleteBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TechBooksPage</servlet-name>
        <servlet-class>coreservlets.TechBooksPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatalogPage</servlet-name>
        <url-pattern>/CatalogPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KidsBooksPage</servlet-name>
        <url-pattern>/KidsBooksPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderPage</servlet-name>
        <url-pattern>/OrderPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TechBooksPage</servlet-name>
        <url-pattern>/TechBooksPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewBooks</servlet-name>
        <url-pattern>/viewBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editBook</servlet-name>
        <url-pattern>/editBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteBook</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
